<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NASAPictureOfTheDay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <!--        <item name="theme">@style/MarsTheme</item>-->
    </style>

    <style name="VenusTheme" parent="Theme.NASAPictureOfTheDay">
        <item name="colorPrimary">#43a047</item>
        <item name="colorPrimaryVariant">#76d275</item>
        <item name="colorSecondary">#2e7d32</item>
        <item name="colorSecondaryVariant">#60ad5e</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorOnSecondary">#ffffff</item>
    </style>

    <style name="MarsTheme" parent="Theme.NASAPictureOfTheDay">
        <item name="colorPrimary">#f4511e</item>
        <item name="colorPrimaryVariant">#ff844c</item>
        <item name="colorSecondary">#ffb300</item>
        <item name="colorSecondaryVariant">#ffe54c</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorOnSecondary">#000000</item>
    </style>

    <style name="MoonTheme" parent="VenusTheme">
        <item name="colorPrimary">#9e9e9e</item>
        <item name="colorPrimaryVariant">#cfcfcf</item>
        <item name="colorSecondary">#757575</item>
        <item name="colorSecondaryVariant">#a4a4a4</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorOnSecondary">#ffffff</item>
    </style>
</resources>